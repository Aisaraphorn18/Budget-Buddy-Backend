{
  "name": "budget-buddy-backend",
  "version": "1.0.50",
  "type": "module",
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target bun",
    "build:production": "bun build --compile --minify-whitespace --minify-syntax --target bun --outfile server ./src/index.ts",
    "build:clean": "rm -rf dist && rm -f server && bun run build",
    "build:clean:production": "rm -rf dist && rm -f server && bun run build:production",
    "start": "bun run dist/index.js",
    "start:production": "./server",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:unit": "bun test tests/unit/",
    "test:integration": "bun test tests/integration/",
    "test:coverage": "bun test --coverage",
    "dev": "bun run --watch src/index.ts",
    "prepare": "husky",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "commitlint": "commitlint --edit",
    "commitlint:check": "commitlint --from=HEAD~1"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@elysiajs/bearer": "^1.4.1",
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/jwt": "^1.4.0",
    "@elysiajs/openapi": "^1.4.2",
    "@elysiajs/swagger": "^1.3.1",
    "@supabase/supabase-js": "^2.57.4",
    "bcryptjs": "^3.0.2",
    "elysia": "latest"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/bcryptjs": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "bun-types": "latest",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2"
  },
  "module": "src/index.js"
}
